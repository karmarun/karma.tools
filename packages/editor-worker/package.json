{
  "name": "@karma.run/editor-worker",
  "version": "0.15.0",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "license": "MIT",
  "repository": "github:karmarun/karma.tools",
  "scripts": {
    "build": "run-s copy-license sync-package-info build:*",
    "build:cjs": "tsc --declaration --module commonjs --outDir ./lib/cjs",
    "build:esm": "tsc --declaration --module esnext --outDir ./lib/esm",
    "watch": "npm-run-all copy-license sync-package-info --parallel watch:*",
    "watch:cjs": "tsc -p ./tsconfig.json --declarationMap --declaration --module commonjs --outDir ./lib/cjs --watch",
    "watch:esm": "tsc -p ./tsconfig.json --declarationMap --declaration --module esnext --outDir ./lib/esm --watch",
    "copy-license": "shx cp ../../LICENSE ./",
    "clean": "shx rm -rf ./LICENSE ./lib",
    "prepare": "run-s clean copy:license build sync-package-info",
    "sync-package-info": "node ./../../scripts/syncPackageInfo.js ./src/version.ts"
  },
  "dependencies": {
    "@karma.run/editor-common": "^0.15.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2",
    "typescript": "^3.5.2"
  }
}
